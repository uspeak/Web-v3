@import 'nib'
@import '../_vars'

.game-whichone
	.choices
		margin .5em
		padding 0
	.note
		cursor: pointer
		padding .66em 1em
		margin .5em 1em
		text-align center
		width 260px
		min-width 40%
		font-size 2em
		font-family write-font
		list-style none
		border 1px solid #DCD8C1
		box-shadow:0px 1px 3px rgba(79,75,65,0.4);
		display inline-block
		background linear-gradient(top,rgb(250,249,241),rgb(247,244,221))
		border-radius 0%/1%;
		color #656152
		position relative
		i
			top 0
			left 0
			width 100%
			position absolute
			font-size 3em
			line-height .95em
			right 0
			text-align center
			display none
			// opacity .5
			text-shadow 0 0 10px rgba(250,249,241,.3)
		i.icon-remove
			color rgba(254,40,40,.7)
		i.icon-ok
			color rgba(57,153,44,.7)
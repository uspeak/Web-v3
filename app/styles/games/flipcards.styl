@import 'nib'
@import '../_vars'

.game-flipcards
    .cards
        margin 0 auto
        padding 0
        max-width 700px
    .card
        display inline-block
        position relative
        vertical-align top
        width 140px
        height @width
        font-size 1.2em
        line-height @width
        margin 10px

        > .front, > .back
            display inline-block
            // border-radius 4px
            overflow hidden
            border 4px solid white
            border-radius 5px
            background white
            text-align  center
            box-shadow  0 2px 5px rgba(0,0,0,.2)
            position  relative
            color #569fb4
            font-weight  bold
            position: absolute
            top: 0
            bottom 0
            left 0
            right 0
            width 100%
            height 100%
            box-sizing border-box
            backface-visibility hidden
            perspective 200px
        > .back
            background linear-gradient(top, #fafafa, #EEE)
        > .front
            transform rotateY(-180deg)
            perspective 500px
            background url("../images/games/flipcards/card-background.png")
            position: absolute

@media (max-width: 480px)
    .game-flipcards
        .round,.help
            display none
        .card
            width 74px
            height @width
            margin 3px
            line-height @width

            > .front, > .back
                border-width 2px


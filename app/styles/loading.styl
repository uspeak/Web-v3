@import 'nib'

@keyframes loader
  0% 
    transform: translateX(-30px)
    opacity: 0
  25%
    opacity: 1
  50%
    transform: translateX(30px)
    opacity: 0
  100% 
    opacity: 0

#loading 
    z-index:20000
    background:#222
    background:rgba(30,30,30,.8)
    position: absolute
    width:100%
    height:100%
    display:none
    span
        display: block
        margin: 0 auto

    span.l-1, span.l-2, span.l-3, span.l-4, span.l-5, span.l-6
        position: absolute
        top:50%
        left:50%
        height: 6px
        width: 6px
        background: white
        display: none
        border-radius: 3px

        .cssanimations &
            display block
            animation: loader 4s infinite
            animation-timing-function: cubic-bezier(0.030, 0.615, 0.995, 0.415)
            animation-fill-mode: both

    for n in 1..6
        .cssanimations & span.l-{n}
            margin-left sum(n -4)*13px
            animation-delay sum(6/5s -1*n/5s)

    .loading-text
        position: absolute
        top:50%
        left:50%
        width:100px
        margin-top:-36px
        margin-left:-50px
        font-family: 'Delius', cursive
        font-size:18px
        text-align:center
        color:white
        text-transform: lowercase
        cursor:default
        text-shadow: 0 1px 5px rgba(85, 85, 85, .85)
        .cssanimations &
            display none


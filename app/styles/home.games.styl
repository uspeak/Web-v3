@import 'nib'

#home-games 
    list-style none
    padding 0
    margin 0
    // margin-top 15px
    li
        width 50%
        padding 0
        margin 3% 0
        display block
        float left
        text-align center
        position relative
        color #888
        b
            display block
            font-weight normal
            font-size 1.5em
        img
            max-width 80%
            opacity .7
    a
        text-decoration none
        transition color .1s ease-out
        color #666
        img
            transition all .1s ease-out
            opacity .8
        &:hover
            color #444
            img
                opacity 1
                transform scale(1.1)

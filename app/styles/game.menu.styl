@import 'nib'
@import '_vars'

.game
    .menu
        position absolute
        bottom 0
        left 0
        right 0
        padding 10px
        z-index 10000
        a
            width 70px
            height @width
            display block
            float left
            line-height @width
            font-size 38px
            background linear-gradient(top,rgb(230,228,227),rgb(202,195,190))
            border-radius 50%
            text-align center
            color rgb(119,118,133)
            text-shadow 0px -1px 0px rgba(255,255,255,0.9)
            box-shadow inset 0 2px 3px rgba(255,255,255,.5), 0 1px 2px rgba(0,0,0,.5)
            margin 10px
            text-decoration none
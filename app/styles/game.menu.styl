@import 'nib'
@import '_vars'

.game
    .menu
        // position absolute
        // bottom 0
        // left 0
        // padding 0 10px 10px
        // right 0
        position absolute
        bottom 0
        right 0
        left 0
        a
            position absolute
            z-index 10001
            width 70px
            height @width
            display block
            float left
            line-height @width
            font-size 38px
            background linear-gradient(top,rgb(230,228,227),rgb(202,195,190))
            border-radius 50%
            text-align center
            color rgb(119,118,133)
            text-shadow 0px -1px 0px rgba(255,255,255,0.9)
            box-shadow inset 0 2px 3px rgba(255,255,255,.5), 0 1px 2px rgba(0,0,0,.5)
            margin 10px
            text-decoration none
            transition all .2s
            cursor hand
            cursor pointer
            &:hover 
                transform scale(1.2)
        a.pause, a.play
            right 10px
            bottom 10px
        a.play
            text-indent 2px
            display none
        a.exit
            left 10px
            bottom 10px
            text-indent -2px

    &.paused
        a.play
            display inline-block
        a.pause
            display none

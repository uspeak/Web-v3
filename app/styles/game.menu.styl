@import 'nib'
@import '_vars'

.game
    .menu
        // position absolute
        // bottom 0
        // left 0
        // padding 0 10px 10px
        // right 0
        position absolute
        bottom 0
        right 0
        left 0
        a
            position absolute
            z-index 10001
            width 60px
            height 60px
            display block
            float left
            line-height @width
            font-size 30px
            // background linear-gradient(top,rgb(230,228,227),rgb(202,195,190))
            background #2faccc url('../images/games/comun_button.png') no-repeat center center
            border-radius 50%
            text-align center
            color white
            text-shadow 0px -1px 0px rrgb(119,118,133)
            box-shadow 0 1px 6px rgba(0,0,0,.3)
            margin .4em
            text-decoration none
            transition all .2s
            cursor hand
            cursor pointer
            &:hover 
                transform scale(1.2)

        a.pause, a.play
            right 0
            bottom @right
        a.play
            text-indent 2px
            display none
        a.exit
            left 0
            bottom @left
            text-indent -2px

    &.paused
        a.play
            display inline-block
        a.pause
            display none
